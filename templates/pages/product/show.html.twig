{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg rounded">
                    <div class="row g-0">
                        <div class="col-md-6">
                            <img src="{{ asset('/images') ~ product.image }}" class="img-fluid rounded-start" alt="{{ product.name }}">
                            <h1 class="card-title display-5 fw-bold my-4 mx-3">{{ product.name }}</h1>

                            <div class="card-body p-4" style="background-color: #f8f9fa;">
                                <div class="d-flex justify-content-between align-items-end w-100">
                                    <div class="mx-3 px-3 py-2 rounded" style="background-color: #f8f9fa;">
                                        <p class="card-text h6 fw-bold mb-1 text-muted">Prix</p>
                                        <p class="card-text display-5 fw-bold mb-0">{{ product.price }} €</p>
                                    </div>
                                    <a href="{{ path('app_cart_add', {id: product.id}) }}" class="btn btn-dark btn-lg">Ajouter au panier</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card-body h-100 d-flex flex-column justify-content-between p-5">
                                <div>
                                    <p class="card-text mb-2">
                                        <span class="text-muted me-2">Catégorie:</span>
                                        <a href="{{ path('app_category', {id: product.category.id}) }}" class="text-decoration-none text-body-emphasis fw-bold">
                                            {{ product.category.name }}
                                        </a>
                                    </p>
                                    <p class="card-text">{{ product.description }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}