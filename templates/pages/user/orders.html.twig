{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Mes commandes</h1>

        {% if orders|length > 0 %}
            {% for order in orders %}
                <div class="card mb-4">
                    <div class="card-header">
                        Commande #{{ order.id }} - {{ order.createdAt|date('d/m/Y H:i') }}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Total : {{ order.total|number_format(2, ',', ' ') }} €</h5>
                        <p class="card-text">Statut : {{ order.status }}</p>

                        <h6>Produits :</h6>
                        <ul class="list-group">
                            {% for item in order.orderItems %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ item.product.name }}
                                    <span class="badge bg-primary rounded-pill">{{ item.quantity }} x {{ item.price|number_format(2, ',', ' ') }} €</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p>Vous n'avez pas encore passé de commande.</p>
        {% endif %}

        <a href="{{ path('app_profil', {'id': app.user.id}) }}" class="btn btn-secondary">Retour au profil</a>
    </div>
{% endblock %}