{% extends 'base.html.twig' %}

{% block title %}Boutique!{% endblock %}

{% block full_width_content %}
    <turbo-frame id="products">
        <div class="container">
            <div class="row">
                <!-- Filter by categories -->
                <div class="col-lg-3 order-lg-2 order-1 mb-4 mb-lg-0">
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h4 class="card-title h5 mb-3">Catégories</h4>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item bg-transparent px-0">
                                    <a href="{{ path('app_shop') }}"
                                       class="text-decoration-none text-body-secondary {% if not current_categorySlug %}fw-bold{% endif %}">
                                        Tous les produits
                                    </a>
                                </li>
                                {% for category in categories %}
                                    <li class="list-group-item bg-transparent px-0">
                                        <a href="{{ path('app_shop', {categorie: category.slug}) }}"
                                           class="text-decoration-none text-body-secondary category-link
                  {% if current_categorySlug == category.slug %} category-link-active fw-bold{% endif %}"
                                           data-turbo-frame="products"
                                           data-turbo-action="advance">

                                            {{ category.name }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    <div class="card shadow-sm" style="height: 725px;">
                        <div class="card-body d-flex flex-column p-0 h-100">
                            <svg class="bd-placeholder-img h-100" width="100%" preserveAspectRatio="xMidYMid slice"
                                 focusable="false">
                                <rect width="100%" height="100%" fill="#868e96"></rect>
                                <text x="50%" y="50%" fill="#dee2e6" dy=".3em" text-anchor="middle">Espace
                                    Publicitaire
                                </text>
                            </svg>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 order-lg-1 order-2">
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                        {% for product in products %}
                            <div class="col">
                                <div class="card shadow-sm h-100 rounded product-card">
                                    <a href="{{ path('app_product_show', {slug: product.slug}) }}"
                                       class="text-decoration-none text-body-emphasis" data-turbo-frame="_top">
                                        <img src="{{ asset('/images/yoga.jpg')}}"
                                             class="card-img-top rounded-top" alt="{{ product.name }}">
                                        <div class="card-body d-flex flex-column">
                                            <h3 class="h5 mb-2">{{ product.name }}</h3>
                                            <p class="text-muted small mb-3">Catégorie: {{ product.category.name }}</p>
                                            <p class="card-text flex-grow-1">{{ product.description|length > 80 ? product.description|slice(0, 60) ~ "..." : product.description }}</p>
                                        </div>
                                    </a>
                                    <div class="card-footer bg-transparent border-top-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="px-3 py-2 rounded" style="background-color: #f8f9fa;">
                                                <p class="card-text h6 fw-bold mb-1 text-muted">Prix</p>
                                                <p class="card-text h4 fw-bold mb-0">{{ product.price }} €</p>
                                            </div>
                                            <a href="{{ path('app_cart_add', {id: product.id}) }}"
                                               class="btn btn-sm btn-dark" data-turbo-frame="_top">Acheter</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-5">
            <div class="w-100 d-flex justify-content-center">
                <div class="d-flex align-items-center">
                    {{ pagerfanta(products, 'twitter_bootstrap5', {
                        prev_message: 'Précédent',
                        next_message: 'Suivant'
                    }) }}
                </div>
            </div>
        </div>
    </turbo-frame>

    <style>
        .product-card {
            transition: transform 0.3s ease-in-out;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .pagination .page-link {
            color: #343a40; /* Couleur noire */
        }

        .pagination .page-link:hover,
        .pagination .page-link:focus {
            color: #212529; /* Couleur noire plus foncée */
            background-color: #f8f9fa; /* Couleur de fond grise */
        }

        .pagination .page-item.active .page-link {
            background-color: #343a40; /* Couleur de fond noire pour la page active */
            border-color: #343a40; /* Couleur de bordure noire pour la page active */
            color: #fff; /* Couleur de texte blanche pour la page active */
        }
    </style>
{% endblock %}
