{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}
{% block body %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <div class="container my-5">
        {% if cart is not empty %}
            <div class="card">
                <div class="row">
                    <div class="col-md-8 bg-white p-5 rounded-start">
                        <h4 class="mb-4"><b>Mon panier</b></h4>
                        <div class="border-top border-bottom py-3">
                            <div class="row align-items-center">
                                {% for item in cart %}
                                    <div class="col-2">
                                        <img class="img-fluid" src="{{ asset('images/' ~ item.product.image) }}" alt="{{ item.product.name }}">
                                    </div>
                                    <div class="col">
                                        <div class="text-muted">{{ item.product.category ?? 'Catégorie' }}</div>
                                        <div>{{ item.product.name }}</div>
                                    </div>
                                    <div class="col">
                                        <a href="#" class="text-dark">-</a>
                                        <a href="#" class="border px-2 text-dark">{{ item.quantity }}</a>
                                        <a href="#" class="text-dark">+</a>
                                    </div>
                                    <div class="col">
                                        &euro; {{ item.product.price }}
                                        <a href="{{ path('app_cart_one_product_delete', {'id': item.product.id}) }}" class="text-danger ms-3">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a href="{{ path('app_cart_delete') }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir vider votre panier ?')">Vider le panier</a>
                            <a href="{{ path('app_shop') }}" class="text-muted"><i class="fas fa-arrow-left"></i> Retour sur la boutique</a>
                        </div>
                    </div>
                    <div class="col-md-4 bg-light p-5 rounded-end">
                        <h5 class="mb-4"><b>Résumé</b></h5>
                        <div class="row mb-3">
                            <div class="col">Produits ({{ cart|length }})</div>
                            <div class="col text-end">&euro; {{ total }}</div>
                        </div>
                        <form>
                            <div class="mb-3">
                                <label for="shipping" class="form-label">Livraison</label>
                                <select class="form-select" id="shipping">
                                    <option selected>Livraison standard - &euro;5.00</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="coupon" class="form-label">Code promo</label>
                                <input type="text" class="form-control" id="coupon" placeholder="Entrez votre code">
                            </div>
                        </form>
                        <div class="row border-top pt-3">
                            <div class="col">PRIX TOTAL</div>
                            <div class="col text-end">&euro; {{ total + 5 }}</div>
                        </div>
                        <button class="btn btn-dark w-100 mt-4">PAYER</button>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">Votre panier est vide</div>
        {% endif %}
    </div>
{% endblock %}