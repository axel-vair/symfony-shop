{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container w-75">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="container-fluid hero-section">
        <div class="row align-items-center">
            <div class="order-md-1 text-center text-md-left">
                <h1 class="display-4 font-weight-bold">Bienvenue chez Butterfly</h1>
                <p class="lead">Découvrez notre sélection de produits bien-être pour prendre soin de vous.</p>
                <a href="{{ path('app_shop') }}" class="btn btn-dark btn-lg">Découvrir la boutique</a>
            </div>
        </div>
    </div>

    <div class="container my-5">
        <h2 class="mb-4 text-center">Nos catégories</h2>
        <div class="category-scroll d-flex overflow-x-auto pt-3 px-2">
            {% for category in categories %}
                <a href="{{ path('app_category_show', {slug: category.slug}) }}"
                   class="category-item text-decoration-none me-3 flex-shrink-0">
                    <div class="card shadow-sm category-card p-3 d-flex align-items-center justify-content-between"
                         style="min-width: 150px;">
                        <h5 class="mb-0 text-dark me-2 flex-grow-1" style="margin-top: 0;">{{ category.name }}</h5>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>


    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <h2 class="mb-4">Nos meilleures ventes</h2>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    {% for product in products|slice(0, 3) %}
                        <div class="col">
                            <a href="{{ path('app_product_show', {slug: product.slug}) }}" class="text-decoration-none">
                                <div class="card h-100 shadow-sm">
                                    <img src="{{ asset('/images/yoga.jpg') }}" class="card-img-top"
                                         alt="{{ product.name }}">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">{{ product.name }}</h5>
                                        <p class="card-text flex-grow-1">{{ product.description|length > 80 ? product.description|slice(0, 80) ~ "..." : product.description }}</p>
                                    </div>
                                    <div class="card-footer bg-transparent border-top-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="px-3 py-2 mb-2 rounded" style="background-color: #f8f9fa;">
                                                <p class="card-text h6 fw-bold mb-1 text-muted">Prix</p>
                                                <p class="card-text h4 fw-bold mb-0">{{ product.price }} €</p>
                                            </div>
                                            <p class="btn btn-md btn-dark">Voir le produit</p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
                <div class="text-center mt-4">
                    <a href="{{ path('app_shop') }}" class="btn btn-outline-dark btn-lg">Voir tous les produits</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container py-5">
        <div class="row g-4 justify-content-center">

            <div class="col-md-4">
                <div class="card p-4 text-center h-100">
                    <i class="bi bi-heart-pulse card-icon mb-3"></i>
                    <h5>Produits de qualité</h5>
                    <p>Une sélection rigoureuse de produits naturels et efficaces pour votre bien-être.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card p-4 text-center h-100">
                    <i class="bi bi-shield-check card-icon mb-3"></i>
                    <h5>Sécurité & Confiance</h5>
                    <p>Des produits testés et certifiés pour garantir votre santé et votre sécurité.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card p-4 text-center h-100">
                    <i class="bi bi-truck card-icon mb-3"></i>
                    <h5>Livraison rapide</h5>
                    <p>Recevez vos commandes rapidement, direct à domicile, en toute simplicité.</p>
                </div>
            </div>
        </div>
    </div>


    <style>
        .hero-section {
            background-color: #f8f9fa;
            padding: 80px 0;
        }

        .card {
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .category-item:hover .category-card {
            background-color: #e8e8e8;
            transform: translateY(-7px);
            z-index: 10;
        }
    </style>

{% endblock %}
