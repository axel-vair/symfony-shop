{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .category-header {
            position: relative;
            background-size: cover;
            background-position: center;
            height: 50vh;
            min-height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #868e96; /* Placeholder background color */
        }
        .category-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
        }
        .category-title {
            color: white;
            font-size: 4rem;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            z-index: 1;
        }
        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 2rem;
            padding: 2rem 0;
        }
        .product-card {
            border: none;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .placeholder-img {
            background-color: #868e96;
            width: 100%;
            height: 225px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #dee2e6;
            font-size: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="category-header">
        <h1 class="category-title">{{ category.name }}</h1>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
{#
                <p class="lead">{{ category.description }}</p>
#}
            </div>
        </div>

        <div class="product-grid">
            {% for product in category.products %}
                <div class="card product-card">
                    <div class="placeholder-img">
                        <span>Image Placeholder</span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description|length > 100 ? product.description|slice(0, 100) ~ '...' : product.description }}</p>
                        <p class="card-text"><strong>{{ product.price }} â‚¬</strong></p>
                        <a href="{{ path('app_product_id', {id: product.id}) }}" class="btn btn-primary">Voir le produit</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
