<header>
    <nav class="navbar navbar-expand-md navbar-light border-bottom mb-4" data-controller="dropdown-menu">
        <div class="container-fluid d-flex align-items-center">

            <!-- Logo -->
            <a href="/" class="navbar-brand d-flex align-items-center me-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="32" class="me-2" viewBox="0 0 118 94"
                     role="img" aria-label="Butterfly logo">
                    <title>Butterfly</title>
                    <path fill-rule="evenodd" clip-rule="evenodd"
                          d="M24.509 0c-6.733 0-11.715 5.893-11.492 12.284.214 6.14-.064 14.092-2.066 20.577C8.943 39.365 5.547 43.485 0 44.014v5.972c5.547.529 8.943 4.649 10.951 11.153 2.002 6.485 2.28 14.437 2.066 20.577C12.794 88.106 17.776 94 24.51 94H93.5c6.733 0 11.714-5.893 11.491-12.284-.214-6.14.064-14.092 2.066-20.577 2.009-6.504 5.396-10.624 10.943-11.153v-5.972c-5.547-.529-8.934-4.649-10.943-11.153-2.002-6.484-2.28-14.437-2.066-20.577C105.214 5.894 100.233 0 93.5 0H24.508zM80 57.863C80 66.663 73.436 72 62.543 72H44a2 2 0 01-2-2V24a2 2 0 012-2h18.437c9.083 0 15.044 4.92 15.044 12.474 0 5.302-4.01 10.049-9.119 10.88v.277C75.317 46.394 80 51.21 80 57.863zM60.521 28.34H49.948v14.934h8.905c6.884 0 10.68-2.772 10.68-7.727 0-4.643-3.264-7.207-9.012-7.207zM49.948 49.2v16.458H60.91c7.167 0 10.964-2.876 10.964-8.281 0-5.406-3.903-8.178-11.425-8.178H49.948z"
                          fill="currentColor"></path>
                </svg>
                <span class="fs-4">Butterfly</span>
            </a>

            <!-- Catégories - menu desktop -->
            <ul class="navbar-nav d-none d-md-flex flex-row me-auto mb-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdownDesktop" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        Catégories
                    </a>
                    {% cache 'header_categories_menu' ttl(3600) %}
                        <ul class="dropdown-menu" aria-labelledby="categoriesDropdownDesktop">
                            {% for category in categories() %}
                                {% if category.subCategories|length > 0 %}
                                    <li class="dropdown-submenu position-relative">
                                        <a class="dropdown-item" href="/categorie/{{ category.slug }}">{{ category.name }}</a>
                                        <ul class="dropdown-menu">
                                            {% for sub in category.subCategories %}
                                                <li>
                                                    <a class="dropdown-item"
                                                       href="/{{ category.slug }}/{{ sub.slug }}">{{ sub.name }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                {% else %}
                                    <li>
                                        <a class="dropdown-item" href="/categorie/{{ category.slug }}">{{ category.name }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    {% endcache %}
                </li>
            </ul>

            <!-- Hamburger button -->
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menu hamburger & icons -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto mb-2 mb-md-0">

                    <!-- Catégories - menu mobile -->
                    <li class="nav-item dropdown d-block d-md-none">
                        <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdownMobile" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Catégories
                        </a>
                        {% cache 'header_categories_menu' ttl(3600) %}
                            <ul class="dropdown-menu" aria-labelledby="categoriesDropdownMobile">
                                {% for category in categories() %}
                                    {% if category.subCategories|length > 0 %}
                                        <li class="dropdown-submenu position-relative">
                                            <a class="dropdown-item" href="/categorie/{{ category.slug }}">{{ category.name }}</a>
                                            <ul class="dropdown-menu">
                                                {% for sub in category.subCategories %}
                                                    <li>
                                                        <a class="dropdown-item" href="/{{ category.slug }}/{{ sub.slug }}">{{ sub.name }}</a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </li>
                                    {% else %}
                                        <li>
                                            <a class="dropdown-item" href="/categorie/{{ category.slug }}">{{ category.name }}</a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        {% endcache %}
                    </li>

                    {% if app.user %}
                        {% set favCount = favorite_count(app.user) %}
                        {% set cartCount = cart_count() %}
                        <!-- Favoris -->
                        <li class="nav-item">
                            <a class="nav-link d-md-none d-flex" href="{{ path('app_favorite') }}">
                                <i class="bi bi-heart icons-nav"></i>
                                Favoris{% if favCount > 0 %} ({{ favCount }}){% endif %}
                            </a>
                            <a class="nav-link d-none d-md-flex position-relative" href="{{ path('app_favorite') }}">
                                <i class="bi bi-heart icons-nav"></i>
                                {% if favCount > 0 %}
                                    <span class="badge-custom position-absolute badge rounded-pill bg-danger">
                                        {{ favCount }}
                                    </span>
                                {% endif %}
                            </a>
                        </li>

                        <!-- Panier -->
                        <li class="nav-item position-relative">
                            <a class="nav-link d-md-none d-flex" href="{{ path('app_cart') }}">
                                <i class="bi bi-cart2 icons-nav"></i>
                                Panier{% if cartCount > 0 %} ({{ cartCount }}){% endif %}
                            </a>
                            <a class="nav-link d-none d-md-flex position-relative" href="{{ path('app_cart') }}">
                                <i class="bi bi-cart2 icons-nav"></i>
                                {% if cartCount > 0 %}
                                    <span class="badge-custom position-absolute badge rounded-pill bg-danger">
                                        {{ cartCount }}
                                    </span>
                                {% endif %}
                            </a>
                        </li>

                        <!-- Profil -->
                        <li class="nav-item">
                            <a class="nav-link d-md-none d-flex" href="{{ path('app_profil', {id: app.user.id}) }}">
                                <i class="bi bi-person icons-nav"></i>
                                Profil
                            </a>
                            <a class="nav-link d-none d-md-flex" href="{{ path('app_profil', {id: app.user.id}) }}">
                                <i class="bi bi-person icons-nav"></i>
                            </a>
                        </li>

                        <!-- Déconnexion -->
                        <li class="nav-item">
                            <a class="btn btn-dark ms-md-3 mt-2 mt-md-0 w-100 d-md-none"
                               href="{{ path('app_logout') }}">
                                Déconnexion
                            </a>
                            <a class="btn btn-dark mt-2 mt-md-0 d-none d-md-inline-block"
                               href="{{ path('app_logout') }}">
                                Déconnexion
                            </a>
                        </li>
                    {% else %}
                        <!-- Connexion / Inscription -->
                        <li class="nav-item">
                            <a class="btn btn-outline-dark me-md-2 mb-2 mb-md-0 mt-2 mt-md-0 w-100 d-md-none"
                               href="{{ path('app_login') }}">
                                Connexion
                            </a>
                            <a class="btn btn-outline-dark me-md-2 mb-2 mb-md-0 mt-2 mt-md-0 d-none d-md-inline-block"
                               href="{{ path('app_login') }}">
                                Connexion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-dark w-100 d-md-none" href="{{ path('app_register') }}">
                                Inscription
                            </a>
                            <a class="btn btn-dark d-none d-md-inline-block"
                               href="{{ path('app_register') }}">
                                Inscription
                            </a>
                        </li>
                    {% endif %}

                </ul>
            </div>

        </div>
    </nav>
</header>
